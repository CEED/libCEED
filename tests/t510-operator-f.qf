inline __device__ void setup(void *ctx, CeedInt Q, const CeedScalar *weight, const CeedScalar *J, CeedScalar *rho) {
  for (CeedInt i=0; i<Q; i++) {
    rho[i] = weight[i] * (J[i+Q*0]*J[i+Q*3] - J[i+Q*1]*J[i+Q*2]);
  }
}

inline __device__ void mass(void *ctx, CeedInt Q, const CeedScalar *rho, const CeedScalar *u, CeedScalar *v) {
  for (CeedInt i=0; i<Q; i++) {
    v[i] = rho[i] * u[i];
  }
}