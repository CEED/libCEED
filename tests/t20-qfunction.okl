// *****************************************************************************
typedef int CeedInt;
typedef double CeedScalar;

// *****************************************************************************
kernel void setup(void *ctx, void *qdata, CeedInt Q, const CeedScalar *u,
                  CeedScalar *v, int *rtn) {
  const CeedScalar *u0 = (double*)u;
  CeedScalar *w = (double*)qdata;
  for (CeedInt i=0; i<Q; i++; tile(TILE_SIZE)) {
    if (i >= Q) continue;
    w[i] = u0[i];
  }
  *rtn=0;
}

// *****************************************************************************
kernel void mass(void *ctx, void *qdata, CeedInt Q, const CeedScalar *u,
                 CeedScalar *v, int *rtn) {
  const CeedScalar *w = (double*)qdata;
  const CeedScalar *u0 = (double*)u;
  CeedScalar *v0 = (double*)v;
  for (CeedInt i=0; i<Q; i++; tile(TILE_SIZE)) {
    if (i >= Q) continue;
    v0[i] = w[i] * u0[i];
  }
  *rtn=0;
}
